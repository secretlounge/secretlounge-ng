[Unit]
Description=Systemd service for secretlounge-ng
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=$HOME/secretlounge-ng
Environment="PATH=$HOME/secretlounge-ng:$PATH"
ExecStart=python3 $HOME/secretlounge-ng/secretlounge-ng >> $HOME/secretlounge-ng/Logfile.log
ExecReload=/bin/kill -s HUP $MAINPID
RestartSec=5

[Install]
WantedBy=multi-user.target
